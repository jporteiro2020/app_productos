<?xml version="1.0" encoding="UTF-8" ?>
<!-- Definir datos generles de la app -->
<widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.appJonatanPorteiro.app"
        version     = "6.0.0" >
    <name>Productos</name>
    <description>
        App para ver productos
    </description>

    <author href="https://www.linkedin.com/in/jonatan-porteiro-7b5495146/" email="jonatan.porteiro@protonmail.com">
      Jonatan Porteiro
    </author>
    
     <!-- https://build.phonegap.com/current-support -->
    <preference name="phonegap-version" value="cli-7.1.0" />
     <!-- plugins -->
    <plugin name="cordova-plugin-whitelist" spec="~1.3.3" />
    <!--informacion de dispositivo-->
    <plugin name="cordova-plugin-device" spec="~2.0.2" />
    <!--geolocalizacion-->
    <plugin name="cordova-plugin-geolocation" spec="2.4.3" />
    <!--network-information-->
    <plugin name="cordova-plugin-network-information" spec="~2.0.1" />
    <!-- QR -->
    <!-- https://www.npmjs.com/package/phonegap-plugin-barcodescanner -->
    <plugin name="phonegap-plugin-barcodescanner" spec= "8.1.0" />

    <!--splash screen-->
    <plugin name="cordova-plugin-splashscreen" spec="~5.0.2" />
    <!--cuanto tiempo se muestra splash-->
    <preference name="SplashScreenDelay" value="3000" />
    <!--si muestra splash solo primera vez-->
    <preference name="SplashShowOnlyFirstTime" value="false" />
     <preference name="ShowSplashScreenSpinner" value="false"/>

  
    <!-- Generar solo para Android utlizando estos iconos -->
    <platform name="android">
        <icon qualifier="ldpi" src="res/icon/android/ldpi.png" />
        <icon qualifier="mdpi" src="res/icon/android/mdpi.png" />
        <icon qualifier="hdpi" src="res/icon/android/hdpi.png" />
        <icon qualifier="xhdpi" src="res/icon/android/xhdpi.png" />
        <icon qualifier="xxhdpi" src="res/icon/android/xxhdpi.png" />
        <icon qualifier="xxxhdpi" src="res/icon/android/xxxhdpi.png" />
        <splash qualifier="land-ldpi" src="res/screen/android/splash-land-ldpi.png" />
        <splash qualifier="land-mdpi" src="res/screen/android/splash-land-mdpi.png" />
        <splash qualifier="land-hdpi" src="res/screen/android/splash-land-hdpi.png" />
        <splash qualifier="land-xhdpi" src="res/screen/android/splash-land-xhdpi.png" />
        <splash qualifier="land-xxhdpi" src="res/screen/android/splash-land-xxhdpi.png" />
        <splash qualifier="land-xxxhdpi" src="res/screen/android/land-xxxhdpi.png" />
        <splash qualifier="port-ldpi" src="res/screen/android/splash-port-ldpi.png" />
        <splash qualifier="port-mdpi" src="res/screen/android/splash-port-mdpi.png" />
        <splash qualifier="port-hdpi" src="res/screen/android/splash-port-hdpi.png" />
        <splash qualifier="port-xhdpi" src="res/screen/android/splash-port-xhdpi.png" />
        <splash qualifier="port-xxhdpi" src="res/screen/android/splash-port-xxhdpi.png" />
        <splash qualifier="port-xxxhdpi" src="res/screen/android/splash-port-xxxhdpi.png" />
    </platform>
    
     <!-- network access -->
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    
</widget>
